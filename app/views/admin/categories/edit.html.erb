

<div class="h-100 w-full flex items-center justify-center bg-teal-lightest font-sans">
  <div class="bg-white rounded shadow p-6 m-4 w-full lg:w-3/4 lg:max-w-lg">

    <div class="mb-4">
      <h1 class="text-3xl font-semibold text-grey-darkest">Editing category</h1>
    </div>

    <%= render "form", category: @category %>

    <br>
    <div class="flex flex-col space-y-4">
      <%= link_to "Show this category", admin_category_path(@category), class: "text-center text-gray-900 bg-white border border-gray-300 focus:outline-none hover:bg-gray-100 focus:ring-4 focus:ring-gray-200 font-medium rounded-lg text-sm px-5 py-2.5" %>
      <%= link_to "Back to categories", admin_categories_path, class: "text-center text-gray-900 bg-white border border-gray-300 focus:outline-none hover:bg-gray-100 focus:ring-4 focus:ring-gray-200 font-medium rounded-lg text-sm px-5 py-2.5" %>
    </div>
  </div>
</div>
