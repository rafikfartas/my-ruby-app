  </div>

  <div class="flex items-start mb-6">
    <div>
      <div class="flex items-center h-5">
        <%= form.check_box :status, class: "w-4 h-4 border border-gray-300 rounded bg-gray-50 focus:ring-3 focus:ring-blue-300" %>
      </div>
    </div>
    <%= form.label :status, class: "ml-2 text-sm font-medium text-gray-900 dark:text-gray-300" %>
  </div>
  <%= form.submit class:"w-full text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm w-full sm:w-auto px-5 py-2.5 text-center" %>
</form>
<% end %>
